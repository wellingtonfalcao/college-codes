@page "/create5"
@model WebApplication2.Pages.Create5Model
@{ 
    ViewData["Title"] = "Criar várias contas";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            @for (int i = 0; i < 2; i++)
            {
                <div class="form-group">
                    <label asp-for="ContasEntrada[i].Nome"></label>
                    <input asp-for="ContasEntrada[i].Nome" class="form-control" />
                    <span asp-validation-for="ContasEntrada[i].Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ContasEntrada[i].Saldo"></label>
                    <input asp-for="ContasEntrada[i].Saldo" class="form-control" />
                    <span asp-validation-for="ContasEntrada[i].Saldo" class="text-danger"></span>
                </div>
            }
            <p></p>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Enviar</button>
            </div>
        </form>
    </div>
</div>

@if (Model.ContasSaida.Any())
{
    <h2>Contas Cadastradas</h2>
    <ul>
        @foreach (var conta in Model.ContasSaida)
        {
            <li>@conta</li>
        }
    </ul>

}