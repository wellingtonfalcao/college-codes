@page "/create1"
@model WebApplication2.Pages.Create1Model
@{
    ViewData["Title"] = "Cadastrar nome";
}

<h2>Cadastrar nome</h2>

<form method="post">
    <div>
        <label for="nome">Nome:</label>
        <input type="text" name="Nome" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>

@if (Model.Nome != null) {
    <div class="alert alert-success mt-3">
        <span>Você cadastrou o nome: <strong>@Model.Nome</strong></span>
    </div>
}
