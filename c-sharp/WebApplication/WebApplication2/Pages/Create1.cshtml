@page "/Create1"
@model WebApplication2.Pages.Create1Model
@{
    ViewData["Title"] = "Cadastrar nome";
}

<h2>Cadastrar nome</h2>

<form method="post">
    <div>
        <label for="nome">Nome:</label>
        <input type="text" name="Nome" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>

@if (Model.FormEnviado) // Mostra SOMENTE se o usuário já postou algo
{
    if (!string.IsNullOrEmpty(Model.Nome))
    {
        <div class="alert alert-success mt-3">
            <span>Você cadastrou: <strong>@Model.Nome</strong></span>
        </div>
    }
    else
    {
        <div class="alert alert-warning mt-3">
            <span>Nenhum nome foi cadastrado.</span>
        </div>
    }
}