@page "/"
@model WebApplication2.Pages.Create2Model
@{
    ViewData["Title"] = "Criar conta";
}

<h1>Criar</h1>
<h2>Conta</h2>
<div>
    <div class="col-md-4">
        <form method="post">
            <label asp-for="Conta.Nome">Nome</label>
            <input asp-for="Conta.Nome" class="form-control" />
            <span asp-validation-for="Conta.Nome" class="text-danger"></span><br />

            <label asp-for="Conta.Saldo">Saldo</label>
            <input asp-for="Conta.Saldo" class="form-control" />
            <span asp-validation-for="Conta.Saldo" class="text-danger"></span>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@if (ModelState.IsValid && Model.Conta != null)
{
    <div class="alert alert-success mt-3">
        <span>Conta criada com sucesso: <strong>@Model.Conta.Nome</strong> com saldo de <strong>@Model.Conta.Saldo</strong></span>
    </div>
}
else if (!ModelState.IsValid && Model.Conta != null)
{
    <div class="alert alert-danger mt-3">
        <span>Erro ao criar conta. Verifique os dados informados.</span>
    </div>
}