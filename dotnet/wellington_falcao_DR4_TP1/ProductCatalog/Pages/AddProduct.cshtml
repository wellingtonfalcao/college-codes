@page "/"
@model ProductCatalog.Pages.AddProductModel
@{
    ViewData["Title"] = "Adicionar Produto";
}

<h1>Adicionar Produto</h1>

<form method="post">
    <div class="form-group">
        <label for="nome">Nome:</label>
        <input asp-for="Nome" class="form-control" id="nome" />
    </div>

    <div class="form-group">
        <label for="preco">Preço:</label>
        <input asp-for="Preco" class="form-control" id="preco" />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Cadastrar</button>
</form>

@if (Model.ProdutoCadastrado)
{
    <hr />
    <h3>Produto cadastrado com sucesso!</h3>
    <p><strong>Nome:</strong> @Model.Nome</p>
    <p><strong>Preço:</strong> R$ @Model.Preco</p>
}
